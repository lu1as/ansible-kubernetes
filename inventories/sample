# Sample Inventory

# ansible_host -> external ip address
# hostname -> same as ansible name
master1 ansible_host=10.1.1.1 hostname=master1
minion1 ansible_host=10.1.1.2 hostname=minion1

client ansible_connection=local ansible_hostname=client
hypervisor ansible_host=1.1.1.1

[all:vars]
# kubernetes context
kube_context=kube-cluster
# kubernetes top-level-domain
kube_tld=kube.examle.de
# Fedora Atomic qcow2 image to pin os version
# virt_atomic_image=https://getfedora.org/atomic_qcow2_latest

[atomic]
master1
minion1

[atomic:vars]
ansible_user=fedora

# install atomic packages via rpm-ostree
[atomic_rpm_ostree]
master1
minion1

# install atomic packages via containers
[atomic_containers]

[virtual_machines]
# needs special hostvars: vm_name=k8s-master1 mac_address="XX:XX:XX:XX:XX:XX"

[virtual_machines:vars]
cpu_cores=2
memory_size_gib=2
data_size=10g

[glusterfs_peers]

[glusterfs_peers:vars]
glusterfs_size=10g

[pki_certs]
master1
minion1
client

[kube_masters]
master1

[kube_minions]
master1
minion1

[etcd_servers]
master1

[kube_client]
client